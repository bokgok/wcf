@{
    ViewBag.Title = "Dangnhap";
    Layout = "~/Views/Shared/_LayoutPageIndex.cshtml";
}
@model MobilePhoneWeb.Models.Users
<div style="width: 100%; background-color:#A8DEE8">
    @{using (Html.BeginForm(null,null, FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <table style="margin-left:100px">
            <tbody>
                <tr><h2>Đăng nhập</h2></tr>
                <tr>
                <td>Tên đăng nhập :</td>
                <td>@Html.TextBoxFor(a=> a.Username)</td>
                <td> @Html.ValidationMessageFor(a => a.Username)</td>
            </tr>
            <tr>
                <td>Mật khẩu : </td>
                <td> @Html.PasswordFor(a =>a.Passwork)</td>
                <td> @Html.ValidationMessageFor(a => a.Passwork)</td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <input type="submit" value="Đăng Nhập" />
                </td>
                <td></td>
            </tr>
        </tbody>
        </table>
    }
    @Html.Raw(ViewBag.Error)
    }
</div>