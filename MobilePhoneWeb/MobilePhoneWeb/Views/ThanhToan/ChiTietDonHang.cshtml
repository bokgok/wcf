@{
    ViewBag.Title = "ChiTietDonHang";
    Layout = "~/Views/Shared/_LayoutPageIndex.cshtml";
}

@model IEnumerable<MobilePhoneWeb.Models.ChiTietDonHang>
<div class="top-bar">

    <h2>CHI TIẾT ĐƠN HÀNG</h2>
</div><br />
<div class="table" style="background-color:#EEE8AA;">
    <img src="img/bg-th-left.gif" width="8" height="7" alt="" class="left" />
    <img src="img/bg-th-right.gif" width="7" height="7" alt="" class="right" />
    <table class="listing" cellpadding="0" cellspacing="0">
        <tr>
            <th class="first" style="width:200px">TÊN SẢN PHẨM</th>
            <th>SỐ LƯỢNG</th>
            <th style="width:150px">GIÁ</th>
            <th class="last" style="width:150px">TỔNG TIỀN</th>
        </tr>
        @foreach (var ctdh in Model)
        {
            <tr>
                <td>@ctdh.tensp</td>
                <td>@ctdh.soluong</td>
                <td>@ctdh.gia</td>
                <td>@ctdh.tonggia</td>
            </tr>
        }
    </table>
    <p>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</p>

</div>
